@model Models.EF.NguoiDung

@{
    ViewBag.Title = "Thêm Mới Sinh Viên";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Sinh Viên
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thêm Mới</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ThemMoi", "NguoiDung", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>Tài khoản</label>
                        @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.TaiKhoan)
                    </div>
                    <div class="col">
                        <label>Mật khẩu</label>
                        @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.MatKhau)
                    </div>
                    <div class="col">
                        <label>Quyền</label>
                        <select name="Quyen" id="Quyen" class="form-control">
                            <option value="SinhVien">Sinh viên</option>
                            <option value="NhanVien">Nhân viên</option>
                            <option value="Admin">Admin</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Quyen)
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    @Html.CheckBoxFor(model => model.TrangThai, new { @class = "custom-control-input", @id = "TrangThai" })
                    <label class="custom-control-label" for="TrangThai">Kích hoạt</label>
                </div>
            </div>
            <div class="form-group">
                <center>
                    <input type="submit" value="Hoàn thành" class="btn btn-primary" />
                </center>
            </div>
        }
    </div>
</div>
