@model Models.EF.LoaiSach

@{
    ViewBag.Title = "Cập Nhật Loại Sách";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Loại Sách
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cập Nhật</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("CapNhat", "LoaiSach", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.MaLoai)
            <div class="form-group">
                <label>Tên Loại</label>
                @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenLoai)
            </div>

            <div class="form-group">
                <center>
                    <input type="submit" value="Hoàn thành" class="btn btn-primary" />
                </center>
            </div>
        }
    </div>
</div>
