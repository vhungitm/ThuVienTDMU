@model Models.EF.NhanVien

@{
    ViewBag.Title = "Thêm Mới Nhân Viên";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Nhân Viên
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thêm Mới</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ThemMoi", "NhanVien", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>Mã nhân viên</label>
                        @Html.TextBoxFor(model => model.MaNV, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.MaNV)
                    </div>
                    <div class="col">
                        <label>Họ tên</label>
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.HoTen)
                    </div>
                   <div class="col">
                        <label>Chức vụ</label>
                        @Html.TextBoxFor(model => model.ChucVu, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.ChucVu)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>Giới tính</label>
                        @Html.DropDownListFor(model => model.GioiTinh, new SelectList(new[] { "Nam", "Nữ" }), new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.GioiTinh)
                    </div>
                    <div class="col">
                        <label>Ngày sinh</label>
                        @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", @required = "required", @type = "date" })
                        @Html.ValidationMessageFor(model => model.NgaySinh)
                    </div>
                    <div class="col">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.SDT)
                    </div>
                    <div class="col">
                        <label>Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
            <div class="form-group">
                <center>
                    <input type="submit" value="Hoàn thành" class="btn btn-primary" />
                </center>
            </div>
        }
    </div>
</div>
